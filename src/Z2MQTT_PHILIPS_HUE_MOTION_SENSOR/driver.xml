        <name>Set Motion Sensitivity</name>
        <description>Change motion sensitivity toPARAM1 on NAME</description>
        <params>
          <param>
            <name>Sensitivity</name>
            <type>LIST</type>
            <default></default>
            <items>
              <item>Low</item>
              <item>Medium</item>
              <item>High</item>
              <item>Very High</item>
              <item>Max</item>
            </items>
          </param>
        </params>
      </command>
      <command>
        <name>Set Led Indication</name>
        <description>Change led indication toPARAM1 on NAME</description>
        <params>
          <param>
            <name>Indication</name>
            <type>LIST</type>
            <default></default>
            <items>
              <item>True</item>
              <item>False</item>
            </items>
          </param>
        </params>
      </command>
      <command>
        <name>Set Occupancy Timeout</name>
        <description>Change the occupancy timeout toPARAM1 seconds on NAME</description>
        <params>
          <param>
